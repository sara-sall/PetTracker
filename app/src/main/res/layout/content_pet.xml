<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Controller.PetActivity"
    tools:showIn="@layout/activity_pet"
    android:background="@color/background_light"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/petGenarealInfoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/colorOnPrimary"
            app:cardCornerRadius="15dp"
            app:cardElevation="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/petNameLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_pet_name"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/petNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Bella" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/breederNameLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="@+id/petNameLayout"
                    app:layout_constraintTop_toBottomOf="@+id/petNameLayout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_breeder_name"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/petBreederNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Ã„renskogens Black Beauty" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/petSexImage"
                    android:layout_width="36dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_pets_green_24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/petNameLayout"
                    app:layout_constraintTop_toTopOf="@+id/petNameLayout" />

                <TextView
                    android:id="@+id/neuteredText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/neutered"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/petSexImage"
                    app:layout_constraintStart_toStartOf="@+id/petSexImage"
                    app:layout_constraintTop_toBottomOf="@+id/petSexImage" />

                <LinearLayout
                    android:id="@+id/petRaceLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="@+id/breederNameLayout"
                    app:layout_constraintTop_toBottomOf="@+id/breederNameLayout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_pet_race"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/petRaceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Cornish Rex" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/petAgeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/petRaceLayout"
                    app:layout_constraintTop_toBottomOf="@+id/petRaceLayout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_pet_age"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/petAgeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="4" />
                </LinearLayout>

                <TextView
                    android:id="@+id/petBirthdateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:textColor="#CAC8C8"
                    app:layout_constraintBottom_toBottomOf="@+id/petAgeLayout"
                    app:layout_constraintStart_toEndOf="@+id/petAgeLayout"
                    tools:text="2014-03-23" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/petVetInfoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorOnPrimary"
            app:cardCornerRadius="15dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/dark_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titleInsuranceInformation" />

                <TextView
                    android:id="@+id/titleInsuranceInformation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_insurance_information"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/insuranceProviderLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="@+id/titleInsuranceInformation"
                    app:layout_constraintTop_toBottomOf="@+id/titleInsuranceInformation">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_insurance_provider"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/petInsuranceProviderText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/title_insurance_provider" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/insuranceNumberLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/insuranceProviderLayout"
                    app:layout_constraintTop_toBottomOf="@+id/insuranceProviderLayout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_insurance_number"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/petInsuranceNumberText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/title_insurance_number" />
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/petInsuranceInfoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/colorOnPrimary"
            app:cardCornerRadius="15dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <View
                    android:id="@+id/view2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/dark_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titleVetInformation" />

                <TextView
                    android:id="@+id/titleVetInformation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_veterinary_information"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/title_vaccines"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/titleVetInformation"
                    app:layout_constraintTop_toBottomOf="@+id/titleVetInformation" />


                <ImageView
                    android:id="@+id/alertFPLVImage"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="@string/alert_FPLV"
                    android:src="@drawable/ic_error_outline_red_24dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewFPLV"
                    app:layout_constraintStart_toStartOf="@+id/textView5"
                    app:layout_constraintTop_toTopOf="@+id/textViewFPLV"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/textViewFPLV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vaccine_FPLV"
                    app:layout_constraintStart_toEndOf="@+id/alertFPLVImage"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <TextView
                    android:id="@+id/vaccineFPLVDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#CAC8C8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/textViewFPLV"
                    app:layout_constraintTop_toTopOf="@+id/textViewFPLV"
                    tools:text="2014-03-23" />

                <ImageView
                    android:id="@+id/alertFCVImage"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="@string/alert_FCV"
                    android:src="@drawable/ic_error_outline_red_24dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewFCV"
                    app:layout_constraintStart_toStartOf="@+id/alertFPLVImage"
                    app:layout_constraintTop_toTopOf="@+id/textViewFCV" />

                <TextView
                    android:id="@+id/textViewFCV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/vaccine_FCV"
                    app:layout_constraintStart_toEndOf="@+id/alertFCVImage"
                    app:layout_constraintTop_toBottomOf="@+id/textViewFPLV" />

                <TextView
                    android:id="@+id/vaccineFCVDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#CAC8C8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/textViewFCV"
                    app:layout_constraintTop_toTopOf="@+id/textViewFCV"
                    tools:text="2014-03-23" />

                <ImageView
                    android:id="@+id/alertFHVImage"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="@string/alert_FHC"
                    android:src="@drawable/ic_error_outline_red_24dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewFHV"
                    app:layout_constraintStart_toStartOf="@+id/alertFCVImage"
                    app:layout_constraintTop_toTopOf="@+id/textViewFHV"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/textViewFHV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/vaccine_FHC"
                    app:layout_constraintStart_toEndOf="@+id/alertFHVImage"
                    app:layout_constraintTop_toBottomOf="@+id/textViewFCV" />

                <TextView
                    android:id="@+id/vaccineFHVDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#CAC8C8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/textViewFHV"
                    app:layout_constraintTop_toTopOf="@+id/textViewFHV"
                    tools:text="2014-03-23" />

                <ImageView
                    android:id="@+id/alertRabiesImage"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="@string/alert_rabies"
                    android:src="@drawable/ic_error_outline_red_24dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewRabies"
                    app:layout_constraintStart_toStartOf="@+id/alertFHVImage"
                    app:layout_constraintTop_toTopOf="@+id/textViewRabies"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/textViewRabies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/vaccine_rabies"
                    app:layout_constraintStart_toEndOf="@+id/alertRabiesImage"
                    app:layout_constraintTop_toBottomOf="@+id/textViewFHV" />

                <TextView
                    android:id="@+id/vaccineRabiesDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#CAC8C8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/textViewRabies"
                    app:layout_constraintTop_toTopOf="@+id/textViewRabies"
                    tools:text="2014-03-23" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>