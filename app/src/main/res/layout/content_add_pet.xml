<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Controller.AddPetActivity"
    tools:showIn="@layout/activity_add_pet"
    android:layout_marginTop="?attr/actionBarSize"
    android:background="@color/background_light"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <include layout="@layout/card_general_add_pet" />

        <include layout="@layout/card_insurance_add_pet" />

        <include layout="@layout/card_veterinary_add_pet" />


    </LinearLayout>



</androidx.core.widget.NestedScrollView>